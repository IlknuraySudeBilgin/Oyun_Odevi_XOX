<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/textbaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XOX OYUNU"
        android:textColor="#32127a"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"

         />

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textbaslik"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/text_oyuncu1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="Oyuncu 1"
            android:textColor="@color/black"
            android:textAlignment="center"

            />

        <TextView
            android:id="@+id/text_oyuncu2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="Oyuncu 2"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/text_oyuncu1"


            />

        <TextView
            android:id="@+id/skor_oyuncu1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="0"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@+id/text_oyuncu1"

            />

        <TextView
            android:id="@+id/skor_oyuncu2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="0"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@id/text_oyuncu2"
            android:layout_toRightOf="@+id/skor_oyuncu1"


            />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/relative_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="26sp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="26sp"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="26sp"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="26sp"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="26sp"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="26sp"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="26sp"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/btn7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="26sp"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="26sp"
                android:background="@drawable/btn"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1dp"/>




        </LinearLayout>




    </LinearLayout>

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_linear"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:text="Oyun Durumu"
        android:textColor="@color/black"
        />
    
    <Button
        android:id="@+id/btn_tekraroyna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_status"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn1"
        app:backgroundTint="@null"
        android:text="Tekrar Oyna"
        android:textSize="26sp"
        />


    <Button
        android:id="@+id/btn_sil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_tekraroyna"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="SÄ°L"
        android:background="@drawable/btn1"
        app:backgroundTint="@null"
        android:textSize="26sp"
        />







</RelativeLayout>